# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS Supabase
# ===========================================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS MySQL (Deprecado)
# ===========================================
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=tu_usuario
# DB_PASSWORD=tu_contraseña
# DB_NAME=sgpti_db

# ===========================================
# CONFIGURACIÓN DE JWT (Autenticación)
# ===========================================
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# ===========================================
# CONFIGURACIÓN DE EMAIL (SMTP)
# ===========================================
# Para usar Gmail, habilita "Aplicaciones menos seguras" o usa una contraseña de aplicación
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_correo@gmail.com
SMTP_PASSWORD=tu_contraseña_de_aplicacion
EMAIL_FROM=SGPTI <noreply@sgpti.edu>

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS
# ===========================================
UPLOAD_MAX_SIZE=20971520
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx

# ===========================================
# URL DEL FRONTEND (para CORS y emails)
# ===========================================
FRONTEND_URL=http://localhost:5173
